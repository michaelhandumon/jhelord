// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// schema.prisma

datasource db {
  provider = "postgresql" // or "mysql", "sqlite", "sqlserver"
  url      = env("DATABASE_URL")
}

// Define the User model for authentication
model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  role     UserRole @default(USER)
}

// Enum for user roles
enum UserRole {
  USER
  DRIVER
  ADMIN
}

enum BookingStatus {
  PENDING
  ACCEPTED
  CANCELLED
  COMPLETED
}



model User {
  id           Int            @id @default(autoincrement())
  username     String         @unique
  email        String         @unique
  password     String
  role         UserRole
  phoneNumber  String?        @unique
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  profile      Profile?
  booking      Booking[]
  driverReview DriverReview[]
  driver       Driver?
}

model Driver {
  id            Int    @id @default(autoincrement())
  firstName     String
  lastName      String
  licenseNumber String
  address       String
  birthdate     String

  unit         Unit[]
  booking      Booking[]
  driverReview DriverReview[]
  userId       Int            @unique
  User         User?          @relation(fields: [userId], references: [id])
}

model Unit {
  id          Int       @id @default(autoincrement())
  driverId    Int
  model       String
  make        String
  number      String
  plateNumber String
  runTime     DateTime?     @default(now())
  status      String
  location    Json

  driver Driver @relation(fields: [driverId], references: [id])
}

model Booking {
  id        Int           @id @default(autoincrement())
  driverId  Int
  userId    Int
  status    BookingStatus
  location  Json
  createdAt DateTime      @default(now())
  User      User          @relation(fields: [userId], references: [id])
  driver    Driver        @relation(fields: [driverId], references: [id])
}

model Profile {
  id           Int      @id @default(autoincrement())
  userId       Int      @unique
  firstName    String
  lastName     String
  dateOfBirth  DateTime
  gender       String
  profileImage String?
  User         User     @relation(fields: [userId], references: [id])
}

model DriverReview {
  id        Int      @id @default(autoincrement())
  driverId  Int
  userId    Int
  rating    Int      @default(0)
  review    String?
  createdAt DateTime @default(now())

  driver Driver @relation(fields: [driverId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}


model Driver {
  id            Int    @id @default(autoincrement())
  firstName     String
  lastName      String
  licenseNumber String
  address       String
  birthdate     String

  unit Unit[]
}

model Unit {
  id          Int       @id @default(autoincrement())
  driverId    Int
  model       String
  make        String
  number      String
  plateNumber String
  runTime     DateTime?
  status      String
  location    Json

  operations Operation[]
  driver Driver @relation(fields: [driverId], references: [id])
}

model Customer {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  address   String

  operations Operation[]
}

model Operation {
  id         Int    @id @default(autoincrement())
  unitId     Int
  customerId Int
  status     String

  customer Customer @relation(fields: [customerId], references: [id])
  unit Unit @relation(fields: [unitId], references: [id])
}
